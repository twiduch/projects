<% if notice.present? %>
  <div class="bg-green-100 rounded-lg py-5 px-6 mb-4 text-base text-green-700 mb-3"
       role="alert"
       data-controller="flash"
       data-flash-target="flash">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="bg-red-100 rounded-lg py-5 px-6 mb-4 text-base text-red-700 mb-3"
       role="alert"
       data-controller="flash"
       data-flash-target="flash">
    <%= alert %>
  </div>
<% end %>
